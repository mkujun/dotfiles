" Define the leader key to be space
let mapleader=\<Space>

" Map <Space>s to save the current file
nnoremap <Space>s :w<CR>

" Map <Space>i to jump to the beginning of the line
nnoremap <Space>i ^

nnoremap <Space>n :noh<CR>

set ignorecase
set hlsearch
set incsearch

" Navigate to the right split
nnoremap <S-l> <C-w>l

" Navigate to the left split
nnoremap <S-h> <C-w>h

" Navigate to the upper split
nnoremap <S-k> <C-w>k

" Navigate to the lower split
nnoremap <S-j> <C-w>j
