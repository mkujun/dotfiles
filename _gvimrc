set nocompatible              " be iMproved, required

filetype off                  " required

"mapping for nerdtree toggle
map <C-n> :NERDTreeToggle<CR>

set relativenumber
syntax enable
set nowrap

set ignorecase
set hlsearch
set incsearch

set noswapfile

"moving line(s) up or down 
nnoremap <S-j> :m .+1<CR>==
nnoremap <S-k> :m .-2<CR>==
vnoremap <S-j> :m '>+1<CR>gv=gv
vnoremap <S-k> :m '<-2<CR>gv=gv
